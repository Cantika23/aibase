{
  "$schema": "./logging.schema.json",
  "enabled": true,
  "filters": [
    {
      "executable": "backend",
      "level": "info",
      "categories": {
        "Core": true,
        "WebSocket": true,
        "Auth": true,
        "Storage": true,
        "LLM": true,
        "Extension": true,
        "Tools": true,
        "Handlers": true,
        "Middleware": true,
        "Migration": false
      }
    },
    {
      "executable": "frontend",
      "level": "info",
      "categories": {
        "general": true,
        "chat": true,
        "files": true,
        "auth": true,
        "websocket": true,
        "extensions": true,
        "ui": true,
        "api": true
      }
    },
    {
      "executable": "*",
      "level": "error",
      "categories": {
        "*": true
      }
    }
  ],
  "outputs": {
    "console": {
      "enabled": true,
      "colorize": true,
      "timestamp": true
    },
    "file": {
      "enabled": true,
      "path": "./logs",
      "maxSize": "10MB",
      "maxFiles": 5
    }
  },
  "categoryColors": {
    "Core": "magenta",
    "WebSocket": "blue",
    "Auth": "yellow",
    "Storage": "green",
    "LLM": "cyan",
    "Extension": "magenta",
    "Tools": "white",
    "Handlers": "cyan",
    "Middleware": "yellow",
    "Migration": "yellow",
    "general": "white",
    "chat": "blue",
    "files": "green",
    "auth": "yellow",
    "websocket": "cyan",
    "extensions": "magenta",
    "ui": "magenta",
    "api": "cyan"
  }
}
