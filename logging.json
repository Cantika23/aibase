{
  "$schema": "./logging.schema.json",
  "enabled": true,
  "filters": [
    {
      "executable": "backend",
      "level": "info",
      "categories": [
        "Core",
        "WebSocket",
        "Auth",
        "Storage",
        "LLM",
        "Extension",
        "Tools",
        "Handlers",
        "Middleware",
        "Migration"
      ]
    },
    {
      "executable": "frontend",
      "level": "info",
      "categories": [
        "general",
        "chat",
        "files",
        "auth",
        "websocket",
        "extensions",
        "ui",
        "api"
      ]
    },
    {
      "executable": "*",
      "level": "error",
      "categories": ["*"]
    }
  ],
  "outputs": {
    "console": {
      "enabled": true,
      "colorize": true,
      "timestamp": true
    },
    "file": {
      "enabled": true,
      "path": "./logs",
      "maxSize": "10MB",
      "maxFiles": 5
    }
  },
  "categories": {
    "Core": { "color": "magenta" },
    "WebSocket": { "color": "blue" },
    "Auth": { "color": "yellow" },
    "Storage": { "color": "green" },
    "LLM": { "color": "cyan" },
    "Extension": { "color": "magenta" },
    "Tools": { "color": "white" },
    "Handlers": { "color": "cyan" },
    "Middleware": { "color": "yellow" },
    "Migration": { "color": "yellow" },
    "general": { "color": "white" },
    "chat": { "color": "blue" },
    "files": { "color": "green" },
    "auth_frontend": { "color": "yellow" },
    "websocket": { "color": "cyan" },
    "extensions": { "color": "magenta" },
    "ui": { "color": "magenta" },
    "api": { "color": "cyan" }
  }
}
